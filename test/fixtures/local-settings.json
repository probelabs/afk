{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm test:*)",
      "Bash(npm run:*)",
      "Bash(rm:*.tmp)",
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(time:*)",
      "Bash(chmod:*)",
      "Write(test/**)",
      "Edit(*)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:crates.io)",
      "mcp__code-search__search_code",
      "mcp__code-search__extract_code"
    ],
    "deny": [
      "Bash(npm publish:*)"
    ]
  }
}