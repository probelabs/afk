{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command", 
            "command": "$CLAUDE_PROJECT_DIR/scripts/hook-wrapper.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(git:*)", 
      "Bash(node:*)",
      "Bash(make:*)",
      "Edit(src/**)",
      "Write(src/**)",
      "WebFetch(domain:api.mycompany.com)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Write(production.env)",
      "Edit(node_modules/**)"
    ]
  }
}